<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="/intl-tel-input/build/css/intlTelInput.css" />
    <link rel="shortcut icon" sizes="64x64" href="/images/logo.ico" />
    <link rel="stylesheet" href="/stylesheets/register.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="/stylesheets/footer.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.0/axios.min.js"></script>
  </head>
  <body>
    <div class="row mb-2 justify-content-center">
      <div
        class="col-lg-6 d-none d-xxl-block stage"
        style="overflow: hidden"
      ></div>
      <div class="col-lg-6">
        <div class="card1">
          <div class="card">
            <h4 class="card-title text-center">Register with Us!</h4>

            <%- include('./partials/flash') %>

            <form
              action="/user/register"
              method="post"
              autocomplete="off"
              class="needs-validation registerForm"
              id="registerForm"
              novalidate
            >
              <div class="row mt-4">
                <div class="col-md mt-1">
                  <input
                    type="text"
                    class="form-control"
                    id="fname"
                    name="FirstName"
                    placeholder="First name"
                    aria-label="First name"
                    required
                  />
                </div>
                <div class="col-lg mt-1">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Last name"
                    aria-label="Last name"
                    id="lname"
                    name="LastName"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md">
                  <input
                    type="tel"
                    class="form-control"
                    id="phone"
                    name="phone"
                    maxlength="10"
                    placeholder="Contact"
                    required
                  />
                  <div class="invalid-feedback phoneInput">
                    Missing or Invalid input
                  </div>
                </div>
                <div class="col-md dropdown input-field">
                  <input
                    type="text"
                    id="autocomplete-input"
                    class="form-control country"
                    name="Country"
                    placeholder="Country of Residence"
                  />
                  <div class="invalid-feedback countryError">
                    Missing or Invalid Field
                  </div>
                </div>
              </div>
              <div class="row g-3">
                <div class="col mt-3 dropdown input-field">
                  <input
                    type="text"
                    id="autocomplete-input"
                    placeholder="State"
                    name="State"
                    class="form-control state"
                    required
                  />
                  <div class="invalid-feedback stateError">
                    Missing or Invalid Field
                  </div>
                </div>
                <div class="col mt-3 dropdown input-field">
                  <input
                    type="text"
                    id="autocomplete-input inputCity"
                    placeholder="City"
                    name="City"
                    class="form-control city"
                  />
                  <div class="invalid-feedback">Missing or Invalid Field</div>
                </div>
              </div>

              <div class="row g-3">
                <div class="col-md">
                  <input type="date" class="form-control" id="Age" <%let d= new
                  Date(); d = d.getFullYear() + '-' + d.getMonth() + '-' +
                  d.getDate()%> max=<%=d%> placeholder="Date of Birth"
                  name="Age" aria-label="Date of Birth" required>
                </div>
                <div class="col-md has-validation">
                  <input
                    type="email"
                    class="form-control"
                    placeholder="Enter Email"
                    aria-label="email"
                    id="username"
                    name="username"
                    required
                  />
                </div>
              </div>
              <div class="input-group">
                <textarea
                  class="form-control"
                  aria-label="With textarea"
                  form="registerForm"
                  name="bio"
                  placeholder="Enter a Seller Bio"
                  maxlength="300"
                  style="resize: none"
                ></textarea>
              </div>
              <div
                class="row g-3"
                style="display: flex; flex-direction: column"
              >
                <div class="col has-validation">
                  <div class="input-group mb-3">
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      placeholder="Enter Password"
                      aria-label="Enter Password"
                      required
                    />
                    <div class="input-group-text">
                      <input
                        class="form-check-input mt-0"
                        id="check"
                        type="checkbox"
                        aria-label="Checkbox for following text input"
                      />
                      <span>&nbsp;Show</span>
                    </div>
                    <div class="passwordReq">
                      <span class="invalid-feedback" id="invalid">
                        <ul style="list-style-type: none; font-size: 16px">
                          <li class="con1">
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="success1"
                              aria-label="Success:"
                            >
                              <use xlink:href="#check-circle-fill" />
                            </svg>
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="danger1"
                              aria-label="Danger:"
                            >
                              <use xlink:href="#exclamation-triangle-fill" />
                            </svg>
                            Password should be at least 8 characters.
                          </li>
                          <li class="con2">
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="success2"
                              aria-label="Success:"
                            >
                              <use xlink:href="#check-circle-fill" />
                            </svg>
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="danger2"
                              aria-label="Danger:"
                            >
                              <use xlink:href="#exclamation-triangle-fill" />
                            </svg>
                            Password should have a special character.
                          </li>
                          <li class="con3">
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="success3"
                              aria-label="Success:"
                            >
                              <use xlink:href="#check-circle-fill" />
                            </svg>
                            <svg
                              class="bi flex-shrink-0 me-2"
                              width="15"
                              height="15"
                              role="img"
                              id="danger3"
                              aria-label="Danger:"
                            >
                              <use xlink:href="#exclamation-triangle-fill" />
                            </svg>
                            Password should have a number and a capital letter.
                          </li>
                        </ul>
                      </span>
                    </div>
                  </div>

                  <div class="has-validation" style="margin-top: 0px">
                    <input
                      class="form-check-input id-invalid"
                      type="checkbox"
                      value=""
                      id="invalidCheck2"
                      required
                    />
                    <label class="form-check-label" for="invalidCheck2">
                      Agree to terms and conditions
                    </label>
                  </div>
                </div>
                <div class="row g-3 m-0">
                  <div class="col">
                    <button type="submit" class="btn btn-primary" id="submit">
                      Submit
                    </button>
                    <a class="btn btn-primary" href="/user/login">Login</a>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/footer') %>

    <script>
      let myCode;
    </script>
    <script src="/intl-tel-input/build/js/intlTelInput.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/validation.js"></script>
    <script src="/js/register.js"></script>

    <script type="module">
      import * as THREE from 'https://cdn.jsdelivr.net/npm/three@0.121.1/build/three.module.js';
      import { GLTFLoader } from 'https://cdn.jsdelivr.net/npm/three@0.121.1/examples/jsm/loaders/GLTFLoader.js';

      const scene = new THREE.Scene();
      const camera = new THREE.PerspectiveCamera(
        75,
        window.innerWidth / window.innerHeight,
        0.01,
        1000
      );

      const renderer = new THREE.WebGLRenderer({
        alpha: true,
        antialias: true,
      });
      renderer.setClearColor(0x000000, 0);
      renderer.setSize(window.innerWidth, window.innerHeight);
      // const light = new THREE.AmbientLight(0xffffff);
      var light = new THREE.HemisphereLight(0xffffff, 0x000000, 2);
      light.intensity = 4;
      scene.add(light);
      stage.appendChild(renderer.domElement);
      const loader = new GLTFLoader();
      let obj;
      loader.load(
        '/images/untitled.glb',
        function (gltf) {
          obj = gltf.scene;
          obj.translateX(-2.5);
          obj.translateY(-1);
          scene.add(gltf.scene);
        },
        undefined,
        function (error) {
          console.error(error);
        }
      );
      let obj2;
      const loader1 = new GLTFLoader();
      loader1.load(
        '/images/logo_out1.glb',
        function (gltf) {
          obj2 = gltf.scene;
          obj2.translateX(-1);
          obj2.translateZ(3);
          obj2.translateY(1.5);
          obj2.rotation.y = 0;
          obj2.rotation.x = 20.5;
          scene.add(gltf.scene);
        },
        undefined,
        function (error) {
          console.error(error);
        }
      );
      camera.position.set(0, 1, 5);

      function animate() {
        requestAnimationFrame(animate);
        // obj.rotation.y += 0.01
        obj.rotation.y += 0.01;
        obj2.rotation.z -= 0.01;
        renderer.render(scene, camera);
      }
      animate();
    </script>
  </body>
</html>
