                <div
                  class="col-6 productimage"
                  style="
                  background-size: cover;
                    background-image: url('<%=item.image%>');
                  "
                ></div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleInterval"
        data-bs-slide="prev"
      >
